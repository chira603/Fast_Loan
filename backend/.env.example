# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fastloan_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/fastloan_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (SendGrid/SMTP)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@fastloan.com

# SMS Configuration
# Provider options: 'twilio', 'msg91', or leave unset to default to console (no real SMS, logs only)
SMS_PROVIDER=console

# Twilio (set SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 (set SMS_PROVIDER=msg91)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=FASTLN
MSG91_TEMPLATE_ID=your_msg91_template_id

# Payment Gateway (Stripe/Razorpay)
PAYMENT_GATEWAY=stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Frontend URL (for CORS)
# Frontend URL (adjust to your dev port, Vite defaults to 5173)
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
